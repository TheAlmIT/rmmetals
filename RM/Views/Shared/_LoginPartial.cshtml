@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        
            
        @Html.AntiForgeryToken()
        

        <ul class="nav navbar-nav navbar-right">
            <li>


                @Html.ActionLink("Hello " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "padding-top:0px;padding-bottom:0px;font-weight:bold;font-family:Lucida Fax;" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"  style="padding-top:0px;padding-bottom:0px;font-weight:bold;font-family:Lucida Fax;"> Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <i class="fa login" style="color:white;"></i>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "font-weight:bold;font-family:Lucida Fax;" })
        <i class="fa register" style="color:white;"></i> @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", style = "font-weight:bold;font-family:Lucida Fax;" })
    </ul>
}
